alias cmk='reset && cmake -B build -S . -DCMAKE_EXPORT_COMPILE_COMMANDS=ON && cp build/compile_commands.json .'
alias cmk23='reset && cmake -G Ninja -B build -S . -DCMAKE_CXX_COMPILER=clang++-19 -DCMAKE_CXX_FLAGS=-stdlib=libc++ -Wno-dev -DCMAKE_EXPORT_COMPILE_COMMANDS=ON && cp build/compile_commands.json .'
alias b='cmake --build build -j'
alias cxx='just --working-directory . --justfile $HOME/.just/cpp.justfile'
